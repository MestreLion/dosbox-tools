# This file is NOT meant to be executed, but sourced by ~/.bashrc
# To use, add these lines to ~/.bashrc:
#
#	if [ -d "/path/to/dosbox-tools" ] ; then
#	    PATH="$PATH:/path/to/dosbox-tools"
#	    source "/path/to/dosbox-tools/dosbox-tools-bashrc"
#	fi
#

export DOSBOX_DRIVEC=${DOSBOX_DRIVEC:-/dados/Jogos/DOSBox}

alias lifedeath2=dosbox ld2
alias privateer=dosbox priv
alias syndicate=dosbox synd
alias syndicate-ar=dosbox synd_ar

# bash completion
_dosbox_games()
{
        local cur

        COMPREPLY=()
        cur=${COMP_WORDS[COMP_CWORD]}
        COMPREPLY=($( compgen -W "$(for x in "$DOSBOX_DRIVEC"/conf/*.conf; do echo $(basename "${x%.*}"); done)" -- $cur ) )
}
complete -F _dosbox_games dosbox
